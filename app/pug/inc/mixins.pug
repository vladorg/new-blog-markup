mixin project(project)
  - let type = 'project__type--' + project.type.tpl;
  
  a.project(href="#")
    .project__photo
      img(src=project.photo.src, alt=project.photo.alt width="50" height="60")
    .project__descr
      .project__name 
        .project__title.ellipsis=project.title
        .project__type(class=type)
          span.ellipsis=project.type.name
      .project__subtitle
        p=project.subtitle


mixin post(post)  
  article.post
    a(href="#")
      .post__thumb
        img(src=post.thumb.src, alt=post.thumb.alt width="230" height="103")
      .post__caption
        .post__title=post.title
        .post__subtitle.ellipsis=post.subtitle
        .post__description=post.description
